@model Eclatech.CollegeManagement.BusinessObjects.Users

    <div class="row-fluid">
        <div class="control-group">
            @Html.LabelFor(m => Model.UserName, new { @class = "control-label" })
            <div class="controls">
                @Html.TextBoxFor(m => Model.UserName)
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(m => Model.Email, new { @class = "control-label" })
            <div class="controls">
                @Html.TextBoxFor(m => Model.Email)
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(m => Model.UserType, new { @class = "control-label" })
            <div class="controls">
                @Html.DropDownListFor(m => Model.UserType, ViewBag.UserTypeList as SelectList, null, null)
            </div>
        </div>
        <div class="control-group">
            @Html.LabelFor(m => Model.IsActive, new { @class = "control-label" })
            <div class="controls">
                @Html.CheckBoxFor(m => Model.IsActive)
            </div>
        </div>
    </div>    
@Html.HiddenFor(m => m.EncryptedUserId)
<input type="submit" value="Update" class="btn btn-primary" />